include ../bemto/index
include ../partials/_variables
include ../mixins/*.pug

- var suffix = production ? '.min' : '';

doctype html
html(lang='en')

	block variables
		- var title = 'Eleken Test Task';

	block head
		head
			meta(name='format-detection', content='telephone=no')
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(name='viewport', content='width=device-width, initial-scale=1.0')
			title= title
			link(href='static/css/index' + suffix + '.css', rel='stylesheet')
			link(rel='icon', href='static/favicon.ico')
			link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet')

	block body
		body
			// SVG
			block svg
				div.svg-container(style="position: absolute; width: 0; height: 0; overflow: hidden;")
					include ../partials/_sprite.svg

			// picture element HTML5 shiv
			block inlineScripts
				script.
					document.createElement('picture');

			// Header
			block header
				include ../components/_header

			// Main content
			block main
				main

			// Footer
			block footer
				include ../components/_footer

			// Scripts
			block scripts
				script(src='static/js/index' + suffix + '.js')